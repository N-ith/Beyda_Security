<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>(Admin) Beyda Security</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1 id="header">Beyda Security</h1>
    <div class="container">
        <div class="box1">
            <h2>Information</h2>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Create</button>
        </div>
        <table class="table table-hover table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Date of Birth</th>
                    <th>Plan Subscription</th>
                    <th>Deadline Subscription</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((item, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= item.username %></td>
                    <td><%= item.dob %></td>
                    <td><%= item.plan %></td>
                    <td><%= item.deadline %></td>
                    <td><a href="/update/<%= item.id %>" class="btn btn-success">Update</a></td>
                    <td><a href="/delete/<%= item.id %>" class="btn btn-danger">Delete</a></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <!-- Modal -->
        <form action="/create" method="POST">
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Create</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label>Username:</label>
                                <input type="text" name="username" class="form-control" placeholder="Enter username" required>
                            </div>
                            <div class="form-group">
                                <label>Date of Birth:</label>
                                <input type="date" name="dob" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Plan Subscription:</label>
                                <input type="text" name="plan" class="form-control" placeholder="Enter Plan Subscription" required>
                            </div>
                            <div class="form-group">
                                <label>Deadline Subscription:</label>
                                <input type="date" name="deadline" class="form-control" required>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
