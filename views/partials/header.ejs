<body>
    <div class="container mt-4">
        <!-- Display flash messages -->
    <% if (messages.error) { %>
        <div class="alert alert-danger" role="alert">
            <% messages.error.forEach(error => { %>
                <p><%= error %></p>
            <% }); %>
        </div>
    <% } %>

    <% if (messages.success) { %>
        <div class="alert alert-success" role="alert">
        <% messages.success.forEach(success => { %>
            <p><%= success %></p>
        <% }); %>
        </div>
    <% } %>
